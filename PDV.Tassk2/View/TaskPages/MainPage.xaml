<Page x:Class="PDV.Tassk2.View.TaskPages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PDV.Tassk2.View.TaskPages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="MainPage">

    <Border>
        <Grid>
            <Image Source="/Images/4.jpg"
                   Stretch="UniformToFill"/>

            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <Button
                        Margin="0,50,250,200"
                        x:Name="BtnTask1"
                        Click="BtnTask1_Click"
                        Foreground="White"
                        Content="1"
                        ToolTip="Задание №1" BorderBrush="Black" Width="50" Height="40" FontSize="24" FontWeight="Bold" BorderThickness="3,3,3,3">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="#FF805B39" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                <Button
                        Margin="0,0,100,200"
                        x:Name="BtnTask2"
                        Click="BtnTask2_Click"
                        Foreground="White"
                        Content="2"
                        ToolTip="Задание №2" BorderBrush="Black" Width="77" Height="40" FontSize="24" BorderThickness="3,3,3,3" FontWeight="Bold">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="#FF755434" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                <Button
                        Margin="100,0,0,200"
                        x:Name="BtnTask3"
                        Click="BtnTask3_Click"
