                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="#FF717E75" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                <Button
                        Margin="250,50,0,200"
                        x:Name="BtnTask4"
                        Click="BtnTask4_Click"
                        Foreground="#FFDAC492"
                        Content="4"
                        ToolTip="Задание №4" BorderBrush="Black" Width="50" Height="40" FontSize="24" BorderThickness="3,3,3,3" FontWeight="Bold">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="Gray" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                <Button
                        Margin="0,0,250,50"
                        x:Name="BtnTask5"
                        Click="BtnTask5_Click"
                        Foreground="White"
                        Content="5"
                        ToolTip="Задание №5" BorderBrush="Black" Width="50" Height="40" FontSize="24" BorderThickness="3,3,3,3">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="#FF8D653F" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                <Button
                        Margin="0,0,100,70"
                        x:Name="BtnTask6"
                        Click="BtnTask6_Click"
                        Foreground="#FFDAC492"
                        Content="6"
                        ToolTip="Задание №6" BorderBrush="Black" Width="50" Height="40" FontSize="24" BorderThickness="3,3,3,3" FontWeight="Bold">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="#FF67736A" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                <Button
